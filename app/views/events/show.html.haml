#event_show.row
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading
				%h2=@event.title
				%p=@event.date
				%p=link_to @event.venue.name, venue_path(@event.venue_id)
			.panel-body
				%p.description=@event.description
				%h3 Tickets Available for this Event
				%table{:border => 1}
					%tbody
						%tr
							%td Section
							%td Row
							%td Seats
							%td Price
						-@tickets.each do |ticket|
							%tr
								%td=ticket.section
								%td=ticket.row
								%td=ticket.seats
								%td=link_to ticket.price, ticket					
				-@tickets.each do |ticket|
					.box.panel.panel-default
					%h4= link_to "Section: "+ticket.section+" Row: "+ticket.row+" Seats: "+ticket.seats, ticket
					Price: 
					=ticket.price
			.panel-footer
